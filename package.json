{
  "name": "microservices-api",
  "version": "1.0.2",
  "description": "A sandbox API built on microservices",
  "main": "index.js",
  "nyc": {
    "exclude": [
      "src/api/**/*.test.js",
      "src/api/**/*.routes.js",
      "src/api/config",
      "src/api/graphql",
      "src/api/dbSeed.js",
      "src/api/server.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "predev": "npm run dbSeed",
    "dev": "nodemon src/api/server.js --inspect=0.0.0.0:5858 --watch src/ --ignore src/components --ignore src/actions --ignore src/stores --exec babel-node",
    "prebuild": "rm -f public/bundle.js* public/styles/styles.css*",
    "build": "webpack",
    "build:watch": "npm run build -- --watch",
    "dbSeed": "babel-node src/api/dbSeed.js",
    "security-check": "nsp check",
    "lt": "lt --port 3000 --subdomain sandboxapi",
    "lint": "eslint webpack.config.js src/**/*.js",
    "test:api": "NODE_ENV=test nyc mocha src/api/**/*.test.js --exit --require babel-register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonsjones/react-node-sandbox.git"
  },
  "keywords": [
    "node",
    "api",
    "microservices"
  ],
  "author": "Jason Jones",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jasonsjones/react-node-sandbox/issues"
  },
  "homepage": "https://github.com/jasonsjones/react-node-sandbox#readme",
  "dependencies": {
    "@salesforce-ux/design-system": "^2.3.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.7",
    "express": "^4.15.3",
    "express-graphql": "^0.6.7",
    "express-session": "^1.15.5",
    "flux": "^3.1.3",
    "graphql": "^0.10.5",
    "jsonwebtoken": "^7.4.1",
    "mongoose": "^5.7.5",
    "morgan": "^1.8.2",
    "multer": "^1.3.0",
    "node-fetch": "^2.6.1",
    "passport": "^0.4.0",
    "passport-forcedotcom": "^0.1.4",
    "passport-local": "^1.0.0",
    "prop-types": "^15.5.10",
    "react": "16.2.0",
    "react-dom": "16.2.1",
    "react-router-dom": "^4.2.2",
    "react-svg-inline": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.1.1",
    "chai-http": "^3.0.0",
    "css-loader": "^0.28.7",
    "debug": "^3.0.0",
    "eslint": "^4.18.2",
    "eslint-plugin-react": "^7.3.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.6",
    "localtunnel": "^1.8.3",
    "mocha": "^4.0.0",
    "nodemon": "^1.11.0",
    "nsp": "^3.1.0",
    "nyc": "^11.3.0",
    "raw-loader": "^0.5.1",
    "sinon": "4.1.3",
    "sinon-mongoose": "^2.0.2",
    "style-loader": "^0.18.2",
    "url-loader": "^0.6.2",
    "webpack": "^3.5.5"
  }
}
